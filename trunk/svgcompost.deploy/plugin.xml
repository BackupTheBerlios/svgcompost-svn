<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.berlios.svgcompost.deploy.Application">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="svgcompost.deploy.application"
            name="SVGCompost">
         <property
               name="appName"
               value="SVGCompost">
         </property>
         <property
               name="aboutText"
               value="SVGCompost is an SVG compositing editor based on Eclipse GEF and Apache Batik.">
         </property>
      </product>
   </extension>

</plugin>
